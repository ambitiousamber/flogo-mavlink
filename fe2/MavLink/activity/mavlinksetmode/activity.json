{
  "name": "mavlinksetmode",
  "title": "MAV ARM - Set Mode",
  "version": "0.0.2",
  "type": "flogo:activity",
  "display": {
    "category": "MavLink",
    "visible": true,
    "smallIcon": "mavlink.png",
    "description": "Set mav mode - arm/disarm"
  },
  "ref": "github.com/wkarasz/flogo-mavlink/fe2/MavLink/activity/mavlinksetmode",
  "author": "William Karasz",
  "inputs": [
    {
      "name": "mavlinkconnection",
      "type": "object",
      "required": true,
      "display": {
        "name": "MavLink Connection",
        "description": "Select your MavLink Connection",
        "type": "connection"
      },
      "allowed": []
    },
    { 
      "name": "SET_MODE",
      "type": "string",
      "required": true,
      "allowed": [
        "MAV_MODE_PREFLIGHT",
        "MAV_MODE_STABILIZE_DISARMED",
        "MAV_MODE_STABILIZE_ARMED",
        "MAV_MODE_MANUAL_DISARMED",
        "MAV_MODE_MANUAL_ARMED",
        "MAV_MODE_GUIDED_DISARMED",
        "MAV_MODE_GUIDED_ARMED",
        "MAV_MODE_AUTO_DISARMED",
        "MAV_MODE_AUTO_ARMED",
        "MAV_MODE_TEST_DISARMED",
        "MAV_MODE_TEST_ARMED"
      ],
      "value": "MAV_MODE_MANUAL_ARMED"
    }
  ],
  "outputs": [
    {
      "name": "result",
      "type": "string"
    }
  ]
}
